void setup() {
  // Bắt đầu Serial Monitor để gỡ lỗi (tùy chọn)
  Serial.begin(9600);

  // Khởi tạo màn hình OLED. Địa chỉ I2C phổ biến là 0x3C.
  // SSD1306_SWITCHCAPVCC tạo ra điện áp cho màn hình từ 3.3V.
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { 
    Serial.println(F("Khởi tạo SSD1306 thất bại"));
    for(;;); // Vòng lặp vô tận nếu không tìm thấy màn hình
  }

  // Xóa bộ đệm của màn hình.
  display.clearDisplay();

  // Vẽ bitmap lên bộ đệm màn hình.
  // Tọa độ (x, y) là (0, 0) - góc trên bên trái.
  // Kích thước (width, height) là (128, 64).
  // Màu là SSD1306_WHITE để vẽ các pixel sáng.
  display.drawBitmap(0, 0, epd_bitmap_PHOTOPEA_big_smile, 128, 64, SSD1306_WHITE);
  
  // Gửi bộ đệm đến màn hình để hiển thị hình ảnh.
  display.display();
}

